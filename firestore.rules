rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow parents to list/query the users collection to find the student 
      // document via the parentalCode. This is safe because the wider rules
      // prevent reading the full document content.
      allow list: if true;
      
      // Allow student to read/write their own full document
      allow read, write: if isOwner(userId);

      match /plannedSessions/{sessionId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      match /completedSessions/{completedId} {
        // Allow parent to read completed sessions for the dashboard
        allow get, list: if true; 
        // Allow student to manage their own sessions
        allow read, write, delete: if isOwner(userId);
      }
    }
  }
}
