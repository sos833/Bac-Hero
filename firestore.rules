/**
 * @fileoverview Firestore Security Rules for Bean Boutique.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data (profiles, orders, recommendations, order items).
 * Products are publicly readable, but write access is restricted.
 *
 * Data Structure:
 * - /products/{productId}: Public product catalog.
 * - /users/{userId}: User profiles (owner-only access).
 * - /users/{userId}/orders/{orderId}: Orders for each user (owner-only access).
 * - /users/{userId}/orders/{orderId}/orderItems/{orderItemId}: Order items for each order (owner-only access).
 * - /users/{userId}/recommendations/{recommendationId}: Product recommendations for each user (owner-only access).
 *
 * Key Security Decisions:
 * - Users can only access their own profile data and associated orders, order items, and recommendations.
 * - Product data is publicly readable but requires specific authorization to modify (TODO: Add product write authorization if needed).
 * - Data consistency between the path and document data is enforced on creation and updates for user-specific data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read products; write access is currently denied.
     * @path /products/{productId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Allows public read access to product information.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add product write authorization if needed.
    }

    /**
     * @description Allows users to read, update, and delete their own user profiles.
     * @path /users/{userId}
     * @allow (create): if request.auth.uid == userId
     * @allow (get, update, delete, list): if isOwner(userId)
     * @deny (create): if request.auth.uid != userId
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to read, create, update, and delete their own orders.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create): if request.auth.uid == userId && request.resource.data.userId == userId
     * @allow (get, list, update, delete): if isOwner(userId) && resource.data.userId == userId
     * @deny (create): if request.auth.uid != userId || request.resource.data.userId != userId
     * @principle Enforces document ownership for orders.
     */
    match /users/{userId}/orders/{orderId} {
      allow get, list: if isOwner(userId);
      allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows users to read, create, update, and delete their own order items.
     * @path /users/{userId}/orders/{orderId}/orderItems/{orderItemId}
     * @allow (create): if request.auth.uid == userId
     * @allow (get, list, update, delete): if isOwner(userId)
     * @deny (create): if request.auth.uid != userId
     * @principle Enforces document ownership for order items.
     */
    match /users/{userId}/orders/{orderId}/orderItems/{orderItemId} {
      allow get, list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to read, create, update, and delete their own recommendations.
     * @path /users/{userId}/recommendations/{recommendationId}
     * @allow (create): if request.auth.uid == userId
     * @allow (get, list, update, delete): if isOwner(userId)
     * @deny (create): if request.auth.uid != userId
     * @principle Enforces document ownership for recommendations.
     */
    match /users/{userId}/recommendations/{recommendationId} {
      allow get, list: if isOwner(userId);
      allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user ID matches the authenticated user's ID.
     * @param {string} userId The user ID to check.
     * @return {boolean} True if the user ID matches the authenticated user's ID, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of an existing document.
     * @param {string} userId The user ID to check.
     * @return {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}