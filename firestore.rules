rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow parents to list/query to find the student doc via parentalCode,
      // and get the document once found. This is safe because sensitive data
      // is not in the top-level user document.
      allow list, get: if true;
      
      // Allow student to write their own full document
      allow write: if isOwner(userId);

      match /plannedSessions/{sessionId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      match /completedSessions/{completedId} {
        // Allow parent to read completed sessions for the dashboard
        allow get, list: if true; 
        // Allow student to manage their own sessions
        allow write, delete: if isOwner(userId);
      }
    }
  }
}
