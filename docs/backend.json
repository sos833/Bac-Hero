{
    "entities": {
        "User": {
            "title": "User",
            "type": "object",
            "properties": {
                "dailyGoal": {
                    "type": "number",
                    "description": "The user's daily study goal in minutes."
                },
                "shutdownFeature": {
                    "type": "boolean",
                    "description": "Whether the shutdown feature is enabled."
                }
            }
        },
        "PlannedSession": {
            "title": "Planned Session",
            "type": "object",
            "properties": {
                "day": { "type": "string" },
                "subject": { "type": "string" },
                "time": { "type": "string" },
                "duration": { "type": "number" },
                "tasks": {
                    "type": "array",
                    "items": { "$ref": "#/entities/Task" }
                }
            },
            "required": ["day", "subject", "time", "duration"]
        },
        "CompletedSession": {
            "title": "Completed Session",
            "type": "object",
            "properties": {
                "subject": { "type": "string" },
                "duration": { "type": "number" },
                "date": { "type": "string", "format": "date-time" }
            },
            "required": ["subject", "duration", "date"]
        },
        "Task": {
            "title": "Task",
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "text": { "type": "string" },
                "completed": { "type": "boolean" }
            },
            "required": ["id", "text", "completed"]
        }
    },
    "auth": {
        "providers": ["anonymous"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": "User",
            "description": "Stores user-specific settings."
        },
        "/users/{userId}/plannedSessions/{sessionId}": {
            "schema": "PlannedSession",
            "description": "Stores the user's planned study sessions."
        },
        "/users/{userId}/completedSessions/{completedId}": {
            "schema": "CompletedSession",
            "description": "Stores the user's completed study sessions."
        }
    }
}
